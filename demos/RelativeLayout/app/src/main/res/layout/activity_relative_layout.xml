<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anoopp.relativelayout.RelativeLayoutActivity">

    <RelativeLayout
        android:background="@android:color/darker_gray"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:padding="2dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <TextView
            android:layout_margin="2dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Amy"
            android:layout_above="@id/omoju"
            android:layout_alignParentRight="true"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="2dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Lyla"
            android:id="@+id/lyla"
            android:layout_alignParentBottom="true"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="2dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Ben"
            android:id="@+id/ben"
            android:layout_centerHorizontal="true"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="2dp"
            android:background="@android:color/holo_blue_dark"
            android:id="@+id/jennie"
            android:text="Jennie"
            android:textSize="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="2dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Natlie"
            android:layout_above="@id/lyla"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="2dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Kunal"
            android:textSize="25dp"
            android:layout_toLeftOf="@id/ben"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="2dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Omoju"
            android:id="@+id/omoju"
            android:textSize="25dp"
            android:layout_above="@id/jennie"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="2dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Me"
            android:textSize="25dp"
            android:layout_toRightOf="@id/lyla"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="2dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Kagure"
            android:textSize="25dp"
            android:layout_toRightOf="@id/ben"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
